{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "node16",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/renderer/components/*"],
      "@/stores/*": ["src/renderer/stores/*"],
      "@/views/*": ["src/renderer/views/*"],
      "@/utils/*": ["src/renderer/utils/*"],
      "@/types/*": ["src/renderer/types/*"],
      "@/main/*": ["src/main/*"]
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
